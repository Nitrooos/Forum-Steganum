.container
  header
    a(ui-sref="home") Back to home
    h1 Todo List ( {{ incompleteCount() }} )
    label.hide-completed
      input(type='checkbox', ng-model='$parent.hideCompleted')
      | Hide Completed Tasks
    meteor-include(src='loginButtons')
    form.new-task(ng-submit="addTask(newTask); newTask='';", ng-show="$root.currentUser")
      input(ng-model='newTask', type='text', name='text', placeholder='Type to add new tasks')
  ul(ng-repeat='task in tasks')
    li(ng-class="{'checked': task.checked}")
      button.delete(ng-click="deleteTask(task)") &times;
      input.toggle-checked(type="checkbox", ng-checked="task.checked", ng-click="setChecked(task)")
      span.text
        strong {{task.username}}
        | - {{task.text}}



